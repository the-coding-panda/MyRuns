@model MyRuns.Web.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <h1>StravaSharp</h1>
    <p class="lead">This is a dummy web sample to give some hint about getting started with the library.</p>
    <p>Setup your app's credentials in Config.cs!</p>
    <p>@Html.ActionLink("Activities", "List", "Home", new { @class = "btn btn-primary" })</p>
</div>

@{
    foreach (var activity in Model.Activities)
    {
        <div class="row">
            <p><b>@activity.Name</b></p>
            <p>@activity.Distance <i>@activity.Start</i></p>
        </div>
    }
}
